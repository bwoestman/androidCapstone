<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="match_parent" android:weightSum="1">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:20 AM"
                android:id="@+id/textView" android:textSize="36dp"
                android:layout_marginLeft="50dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mo, Tu, We, Th, Fr"
                android:id="@+id/textView3" android:layout_marginLeft="90dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Switch
                android:layout_width="151dp"
                android:layout_height="59dp"
                android:text="Enable"
                android:id="@+id/switch1"
                android:checked="false" android:gravity="center_vertical|right"/>
    </LinearLayout>
</LinearLayout>